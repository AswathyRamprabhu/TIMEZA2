        <section class="features-area section_gap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Latest Products</h1>
                    <p>Latest collections of Watches are available here!!!.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <% products.forEach(function(product) { %>


                <% if (product.status==='Listed' ) { %>



                    <!-- single product -->
                    <div class="col-lg-3 col-md-6">
                        <a href="/signin">

                            <div class="single-product">
                                <% if (product.image && product.image.length> 0) { %>
                                    <img class="img-fluid" src="/uploadProductImage/<%= product.image[0] %>" alt="">
                                    <% } else { %>
                                        <!-- Handle the case where product.image is undefined or empty -->
                                        <img class="img-fluid" src="/default-placeholder-image.jpg" alt="Placeholder">
                                        <% } %>

                                            <div class="product-details">
                                                <h6>
                                                    <%= product.productname %>
                                                </h6>
                                                <h7>
                                                    <%= product.description %>
                                                </h7>
                                                <h7>(Inclusive of all taxes)</h7>

                                                <div class="price">
                                                    <h6>
                                                        MRP ₹ <%= product.price.toLocaleString('en-IN', {
                                                            minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>

                                                    </h6>

                                                    <h6 class="l-through">MRP ₹ <%= product.mrp.toLocaleString('en-IN',
                                                            { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                                                    </h6>
                                                </div>


                                            </div>
                            </div>
                            </a>
                    </div>
                    <% } %>
                        <% }); %>
                            <!-- single product -->


        </div>
    </div>
    </section>

    


