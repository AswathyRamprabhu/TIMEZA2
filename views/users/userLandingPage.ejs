    <!-- Carousel Start -->
    <div class="container-fluid mb-3" style="width: 2100px; height: 500px;">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0 " data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#header-carousel" data-slide-to="0" class="active"></li>
                        <% for(let i=1;i<banner.length;i++){ %>
                            <li data-target="#header-carousel" data-slide-to="<%= i %>"></li>
                            <% } %>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item position-relative active" style="height: 430px; padding-left: 30px;">
                            <img class="position-absolute w-100 h-100" src="/uploadProductImage/<%= banner[0].images %>"
                                style="width: 2000px; height: 1000px;">


                        </div>
                        <% for(let i=1;i<banner.length;i++){ %>''
                            <div class="carousel-item position-relative" style="height: 430px; padding-left: 30px;">
                                <img class="position-absolute w-100 h-100"
                                    src="uploadProductImage/<%= banner[i].images %>"
                                    style="width: 2000px; height: 1000px;">


                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Carousel End -->


    <!-- End banner Area -->
    <!-- <div class="single-product-slider"> -->
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Latest Products</h1>
                    <p>Latest collections of Watches are available here!!!.</p>
                </div>
            </div>
        </div>
        <div class="row">
            <% products.forEach(function(product) { %>


                <% if (product.status==='Listed' ) { %>



                    <!-- single product -->
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <% if (product.image && product.image.length> 0) { %>
                                <img class="img-fluid" src="/uploadProductImage/<%= product.image[0] %>" alt="">
                                <% } else { %>
                                    <!-- Handle the case where product.image is undefined or empty -->
                                    <img class="img-fluid" src="/default-placeholder-image.jpg" alt="Placeholder">
                                    <% } %>

                                        <div class="product-details">
                                            <h6>
                                                <%= product.productname %>
                                            </h6>
                                            <h7>
                                                <%= product.description %>
                                            </h7>
                                            <h7>(Inclusive of all taxes)</h7>

                                            <div class="price">
                                                <h6>
                                                    MRP ₹ <%= product.price.toLocaleString('en-IN', {
                                                        minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>

                                                </h6>

                                                <h6 class="l-through">MRP ₹ <%= product.mrp.toLocaleString('en-IN', {
                                                        minimumFractionDigits: 2, maximumFractionDigits: 2 }) %>
                                                </h6>
                                            </div>


                                        </div>
                        </div>
                    </div>
                    <!-- single product -->

                    <% } %>
                        <% }); %>
        </div>
    </div>

    <%- include('../layouts/userFooter.ejs') %>


        <script>
            if (typeof history.pushState === "function") {
                history.pushState("back", null, null);
                window.onpopstate = function () {
                    history.pushState('back', null, null);
                };
            } else {
                window.location.hash = "back";
            }
        </script>